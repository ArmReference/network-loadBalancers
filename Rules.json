{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Name": {
      "type": "string"
    },
    "frontendIPConfigurationId": {
      "type": "string"
    },
    "backendAddressPoolId": {
      "type": "string"
    },
    "Protocol": {
      "type": "string"
    },
    "frontendPort": {
      "type": "int"
    },
    "backendPort": {
      "type": "int"
    },
    "enableFloatingIP": {
      "type": "bool",
      "defaultValue": false
    },
    "idleTimeoutInMinutes": {
      "type": "int",
      "defaultValue": 5
    },
    "probeId": {
      "type": "string"
    }
  },
  "variables": {
    "rule": {
      "name": "[parameters('Name')]",
      "properties": {
        "frontendIPConfiguration": {
          "id": "[parameters('frontendIPConfigurationId')]"
        },
        "backendAddressPool": {
          "id": "[parameters('backendAddressPoolId')]"
        },
        "protocol": "[parameters('Protocol')]",
        "frontendPort": "[parameters('frontendPort')]",
        "backendPort": "[parameters('backendPort')]",
        "enableFloatingIP": "[parameters('enableFloatingIP')]",
        "idleTimeoutInMinutes": "[parameters('idleTimeoutInMinutes')]",
        "probe": {
          "id": "[parameters('probeId')]"
        }
      }
    }
  },
  "resources": [
  ],
  "outputs": {
    "loadBalancerRule": {
      "type": "object",
      "value": "[variables('rule')]"
    }
  }
}