{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountName": {
      "type": "string",
      "defaultValue": ""
    },
    "ContainerName": {
      "type": "string",
      "defaultValue": ""
    },
    "SasToken": {
      "type": "string",
      "defaultValue": ""
    }

  },
  "variables": {
    "LoadBalancerName": "LB-TEST",
    "templateUri": "[concat('https://',parameters('StorageAccountName'),'.blob.core.windows.net/',parameters('ContainerName'))]"
  },
  "resources": [
    {
      "name": "BuildLoadBalancingFrontendIpConfigurations-FEIP001",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [ ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateUri'), '/FrontendIpConfigurations.json', parameters('SasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Name": {
            "value": "FEIP-001"
          },
          "publicIpAddressId": {
            "value": "<< RESOURCE ID PLACEHOLDER >>"
          },
          "subnetId": {
            "value": "<< RESOURCE ID PLACEHOLDER >>"
          },
          "privateIpAddress": {
            "value": "10.1.1.1"
          },
          "privateIpAllocationMethod": {
            "value": "Static"
          }
        }
      }
    },
    {
      "name": "BuildLoadBalancingProbes-PROBE001",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [ ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateUri'), '/Probes.json', parameters('SasToken'))]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "Name": {
            "value": "Probe-001"
          },
          "Protocol": {
            "value": "TCP"
          },
          "Port": {
            "value": 80
          },
          "IntervalInSeconds": {
            "value": 5
          },
          "NumberOfProbes": {
            "value": 2
          }
        }
      }
    },
    {
      "name": "BuildLoadBalancingRules-RULE001",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildLoadBalancingProbes-PROBE001')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateUri'), '/Rules.json', parameters('SasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Name": {
            "value": "Rule-001"
          },
          "frontendIPConfigurationId": {
            "value": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/loadBalancers/',variables('LoadBalancerName'),'/frontendIPConfigurations/',reference('BuildLoadBalancingFrontendIpConfigurations-FEIP001').outputs.frontendIPConfigurations.value.name)]"
          },
          "backendAddressPoolId": {
            "value": "<< RESOURCE ID PLACEHOLDER >>"
          },
          "protocol": {
            "value": "TCP"
          },
          "frontendPort": {
            "value": 80
          },
          "backendPort": {
            "value": 80
          },
          "enableFloatingIP": {
            "value": false
          },
          "idleTimeoutInMinutes": {
            "value": 5
          },
          "probeId": {
            "value": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/loadBalancers/',variables('LoadBalancerName'),'/probes/',reference('BuildLoadBalancingProbes-PROBE001').outputs.Probe.value.name)]"
          }
        }
      }
    },
    {
      "name": "BuildLoadBalancingRules-RULE002",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildLoadBalancingProbes-PROBE001')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateUri'), '/Rules.json', parameters('SasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Name": {
            "value": "Rule-002"
          },
          "frontendIPConfigurationId": {
            "value": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/loadBalancers/',variables('LoadBalancerName'),'/frontendIPConfigurations/',reference('BuildLoadBalancingFrontendIpConfigurations-FEIP001').outputs.frontendIPConfigurations.value.name)]"
          },
          "backendAddressPoolId": {
            "value": "<< RESOURCE ID PLACEHOLDER >>"
          },
          "protocol": {
            "value": "TCP"
          },
          "frontendPort": {
            "value": 443
          },
          "backendPort": {
            "value": 443
          },
          "enableFloatingIP": {
            "value": true
          },
          "idleTimeoutInMinutes": {
            "value": 30
          },
          "probeId": {
            "value": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/loadBalancers/',variables('LoadBalancerName'),'/probes/',reference('BuildLoadBalancingProbes-PROBE001').outputs.Probe.value.name)]"
          }
        }
      }
    }
  ],
  "outputs": {
    "ipConfig": {
      "type": "array",
      "value": "[createArray(reference('BuildLoadBalancingFrontendIpConfigurations-FEIP001').outputs.frontendIPConfigurations.value)]"
    },
    "Rules": {
      "type": "array",
      "value": "[createArray(reference('BuildLoadBalancingRules-RULE001').outputs.loadBalancerRule.value,reference('BuildLoadBalancingRules-RULE002').outputs.loadBalancerRule.value)]"
    },
    "Probes": {
      "type": "array",
      "value": "[createArray(reference('BuildLoadBalancingProbes-PROBE001').outputs.loadBalancerProbe.value)]"
    }
  }
}